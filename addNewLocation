<!DOCTYPE html>
<html>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>  
<body>

<h2>Add New Location</h2>

<form ng-app="myApp" ng-controller="validateCtrl" 
name="myForm" novalidate>

<p>Location Name:<br>
<input type="text" name="name" ng-model="name" required>
<span style="color:red" ng-show="myForm.name.$dirty && myForm.name.$invalid">
<span ng-show="myForm.name.$error.required">Location name is required.</span>
</span>
</p>

<p>Latitude:<br>
<input type="text" name="latitude" ng-model="latitude" required>
<span style="color:red" ng-show="myForm.latitude.$dirty && myForm.latitude.$invalid">
<span ng-show="myForm.latitude.$error.required">Latitude is required.</span>
<span ng-show="myForm.latitude.$error.latitude">Invalid latitude.</span>
</span>
</p>

<p>Longitude:<br>
<input type="text" name="longitude" ng-model="longitude" required>
<span style="color:red" ng-show="myForm.longitude.$dirty && myForm.longitude.$invalid">
<span ng-show="myForm.longitude.$error.required">Longitude is required.</span>
<span ng-show="myForm.longitude.$error.longitude">Invalid longitude.</span>
</span>
</p>

<p>
<input type="submit"
ng-disabled="myForm.name.$dirty && myForm.name.$invalid ||  
myForm.latitude.$dirty && myForm.latitude.$invalid ||
myForm.longitude.$dirty && myForm.longitude.$invalid">
</p>

</form>

<script>
var app = angular.module('myApp', []);
app.controller('validateCtrl', function($scope) {
    $scope.name = 'Knights Ferry';
    $scope.latitude = '37.8196° N';
    $scope.longitude = '120.6721° W';
});
</script>

</body>
</html>
